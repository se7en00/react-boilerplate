{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true, // include js files
    "checkJs": false, // typecheck js files
    "skipLibCheck": true,
    "esModuleInterop": true,  // enable to do "import React ..." instead of "import * as React ..."
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true, // include only if using decorators
    "experimentalDecorators": true, // include only if using decorators
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    //可选参数会被自动地加上 | undefined
    "strictNullChecks": true,
    // "noUnusedLocals": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl" : ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src", 
    "typings/*"
  ]
  // "exclude": ["node_modules", "webpack", "build"]
}
